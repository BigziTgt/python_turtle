def letter_yo():  #буква 'Ё'
    left(90)
    forward(200)
    right(90)
    forward(25)
    left(90)
    penup()
    forward(25)
    pendown()
    dot()
    penup()
    back(25)
    pendown()
    right(90)
    forward(25)
    left(90)
    penup()
    forward(25)
    pendown()
    dot()
    penup()
    back(25)
    pendown()
    right(90)
    forward(25)
    back(75)
    right(90)
    forward(100)
    left(90)
    forward(75)
    back(75)
    right(90)
    forward(100)
    left(90)
    forward(75)


