def letter_yo():  #буква 'Ё'
    left(90)
    forward(200)
    right(90)
    forward(25)
    left(90)
    color('white')
    forward(25)
    color('red')
    dot()
    color('white')
    back(25)
    color('red')
    right(90)
    forward(25)
    left(90)
    color('white')
    forward(25)
    color('red')
    dot()
    color('white')
    back(25)
    color('red')
    right(90)
    forward(25)
    back(75)
    right(90)
    forward(100)
    left(90)
    forward(75)
    back(75)
    right(90)
    forward(100)
    left(90)
    forward(75)
def letter_zh():  #буква 'Ж'
    left(45)
    forward(100)
    back(100)
    left(45)
    forward(75)
    back(75)
    left(45)
    forward(100)
    back(100)   
    left(90)
    forward(100)
    back(100)
    left(45)
    forward(75)
    back(75)
    left(45)
    forward(100)
    back(100)
    
def letter_ze():  #буква 'З'
    circle(-52,180)
    right(180)
    circle(-50,200)

def letter_i():  #буква 'И'
    left(90)
